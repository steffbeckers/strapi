{
  "connection": "default",
  "collectionName": "device",
  "info": {
    "name": "device",
    "description": ""
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "name": {
      "required": true,
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "type": {
      "enum": [
        "Laptop",
        "Desktop",
        "Phone"
      ],
      "type": "enumeration"
    },
    "user": {
      "model": "user",
      "via": "devices",
      "plugin": "users-permissions"
    }
  }
}